
#include <iostream>
#include <fstream>
#include <string>
#include <cmath>
using namespace std;


string folder_input = "C://Users//Dmitry//Desktop//Cardio//rebuild//Petrova.txt";   //no spaces in folder names!
string folder_output = "C://Users//Dmitry//Desktop//Cardio//rebuild//output.txt";
double MASS_msr[196123];  

int makeMass(double mass[196123]) //input in file
{ 
	setlocale(LC_ALL, "Russian");
	ofstream f;

	f.open(folder_output);   //no spaces in folder names!
	for (int i = 0; i < 196123; i++) 
	{
		f << MASS_msr[i] << endl;
	}
	return 0;
}

int takeMass(int rc) //output from file
{ 
	setlocale(LC_ALL, "Russian");
	ifstream f;

	f.open(folder_input);   
	for (int i = 0; i < rc; i++)
	{
		f >> MASS_msr[i];
		//cout << "element[" << i << "]:" << MASS_msr[i] << endl;
	}
	return 0;
}

int getRowsCount(string st) //возвращает число строк в txt файле
{
	char* str = new char[1024];
	int i = 0;
	ifstream StrBase(st);
	while (!StrBase.eof())
	{

		StrBase.getline(str, 1024, '\n');
		i++;
	}
	StrBase.close();
	delete str;
	return i;
}
//при сохраненнии файла из экселя через "сохранить как - *.txt" он создает 1 пустую строку в конце со значением нуль. 
//чтобы этого не было надо в *.txt файле удалить последнюю строку


int main()
{

	setlocale(LC_ALL, "Russian");
	
	int RowsCount = getRowsCount(folder_input);
	cout << "RowsCount:\n" << RowsCount << endl;
	takeMass(RowsCount);
	makeMass(MASS_msr);
	cout << "mas:\n" << MASS_msr[196122] << endl;
	system("pause");
	return 0;
}
